extends layout 

block content 
    article
        .column
            #login
            h3.text-center.text-white.pt-5 Login form
            .container
              #login-row.row.justify-content-center.align-items-center
                #login-column.col-md-6
                  #login-box.col-md-12
                    form#login-form.form(action='/login' method='post')
                      h3.text-center.text-info Login
                      .form-group
                        label.text-info(for='username') Username:
                        br
                        input#username.form-control(type='text' name='username')
                      .form-group
                        label.text-info(for='password') Password:
                        br
                        input#password.form-control(type='password' name='password')
                      .form-group
                        label.text-info(for='remember-me') Remember me
                        input#remember-me(name='remember-me' type='checkbox')
                        a.text-info(href='/register') Register here
                        br
                        input.btn.btn-info.btn-md(type='submit' name='submit' value='submit')
              if invalid 
                p Invalid details
                      


            
        footer.footer.bg-dark.text-light.text-center.py-3
